<Page x:Class="coursework.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:coursework"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="545"
      Title="Page1">

    <Grid Margin="5,-15,-5,15" Width="545" Height="450">

        <DataGrid x:Name="dt_sort" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="-5,0,0,90"/>
        <Button Content="Delete" HorizontalAlignment="Left" Margin="-5,360,0,0" VerticalAlignment="Top" Height="42" Width="275" FontSize="20" FontStyle="Italic" Click="Delete_Click" Background="#FF4AD4B1"/>
        <Button Content="Add" HorizontalAlignment="Left" Margin="270,359,0,0" VerticalAlignment="Top" Height="43" Width="295" Click="Add_Click" FontSize="20" FontStyle="Italic" Background="#FF4AD4B1"/>
    </Grid>
</Page>
